<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorPrimary">@color/graph_color_primary</item>
        <item name="android:colorPrimaryDark">@color/graph_color_primary_dark</item>
        <item name="android:navigationBarColor">@color/graph_color_primary</item>
        <item name="android:colorAccent">@color/graph_color_primary</item>
        <item name="android:dialogTheme">@style/AppDialog</item>
        <item name="android:alertDialogTheme">@style/AppDialogAlert</item>
    </style>

    <style name="AppDialog" parent="android:Theme.Material.Light.Dialog">
        <item name="android:textColorPrimary">@color/graph_color_primary</item>
        <item name="android:colorAccent">@color/graph_color_primary</item>
    </style>

    <style name="AppDialogAlert" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/graph_color_primary</item>
        <item name="android:colorAccent">@color/graph_color_primary</item>
    </style>

</resources>
